# ============================================================
# ChexPro Client Portal - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================

# Application
NODE_ENV=development
APP_NAME="ChexPro Client Portal"
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3001
PORT=3001

# Database (MySQL)
DATABASE_URL="mysql://portal_user:your_db_password@localhost:3307/chexpro_portal_db"

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_min_64_chars_replace_this
JWT_REFRESH_SECRET=your_refresh_secret_min_64_chars_replace_this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key for sensitive data like SIN (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_hex_key_generate_with_openssl_rand_-hex_32

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=replace_with_your_smtp_password
SMTP_FROM="ChexPro <noreply@chexpro.com>"

# File Storage
# Options: 'local' (development) | 'oci' (production)
FILE_STORAGE_TYPE=local
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=10

# OCI Object Storage (production) - S3-compatible
OCI_NAMESPACE=
OCI_BUCKET_NAME=chexpro-portal-docs
OCI_S3_ENDPOINT=https://<namespace>.compat.objectstorage.ca-toronto-1.oraclecloud.com
OCI_ACCESS_KEY=
OCI_SECRET_KEY=
OCI_REGION=ca-toronto-1

# ============================================================
# Background Check Vendor APIs
# ============================================================

# Cleara (Court Records / Criminal)
CLEARA_API_URL=
CLEARA_API_KEY=
CLEARA_WEBHOOK_SECRET=

# AccurateSource (Court Records / Database)
ACCURATE_SOURCE_API_URL=
ACCURATE_SOURCE_API_KEY=
ACCURATE_SOURCE_WEBHOOK_SECRET=

# Baxter (Court Records / Database)
BAXTER_API_URL=
BAXTER_API_KEY=
BAXTER_WEBHOOK_SECRET=

# Ferretly (Social Media Screening)
FERRETLY_API_URL=
FERRETLY_API_KEY=
FERRETLY_WEBHOOK_SECRET=

# Inform Data (Employment & Education Verification)
INFORM_DATA_API_URL=
INFORM_DATA_API_KEY=
INFORM_DATA_WEBHOOK_SECRET=

# ============================================================
# Stripe (Payment Processing - Later Phase)
# ============================================================
STRIPE_SECRET_KEY=sk_test_replace_with_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=whsec_replace_with_your_stripe_webhook_secret

# ============================================================
# n8n Integration
# ============================================================
N8N_WEBHOOK_BASE_URL=https://n8n.chexpro.com/webhook
N8N_API_KEY=

# ============================================================
# Security
# ============================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
INVITATION_TOKEN_EXPIRES_DAYS=14
PASSWORD_RESET_EXPIRES_MINUTES=60

# ============================================================
# 2FA (Two-Factor Authentication)
# ============================================================
TOTP_APP_NAME="ChexPro Portal"
