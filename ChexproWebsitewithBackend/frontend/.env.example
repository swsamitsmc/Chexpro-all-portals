# ChexPro Frontend Environment Variables
# Copy this file to .env and fill in the values

# Vite
VITE_NODE_ENV=development

# API Base URL
VITE_API_BASE_URL=http://localhost:3000

# Google Analytics
VITE_GA_MEASUREMENT_ID=

# Sanity CMS Configuration
VITE_SANITY_PROJECT_ID=
VITE_SANITY_DATASET=production
VITE_SANITY_API_TOKEN=

# Strapi CMS (deprecated, use Sanity)
VITE_STRAPI_URL=http://localhost:1337
VITE_STRAPI_TOKEN=
VITE_STRAPI_POST_CT=posts
VITE_STRAPI_CATEGORY_CT=categories
VITE_STRAPI_PUBLICATION_STATE=live

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MARKETING=true
VITE_USE_CMS=fallback

# Zitadel Authentication Configuration
# Local development (default): http://localhost:8080
# Production: https://your-organization.zitadel.cloud
VITE_ZITADEL_ISSUER=http://localhost:8080
VITE_ZITADEL_CLIENT_ID=
VITE_ZITADEL_REDIRECT_URI=http://localhost:5173/callback
VITE_ZITADEL_LOGOUT_URI=http://localhost:5173/logout

# Debug
VITE_DEBUG_MODE=false

# Cookie Settings
VITE_TOAST_LIMIT=1
VITE_TOAST_DURATION=5000
VITE_MARKETING_COOKIE_DAYS=365
