# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API Base URL
VITE_API_BASE_URL=http://localhost:3000

# ===========================================
# SANITY CMS CONFIGURATION
# ===========================================
# 1. Go to https://sanity.io and create a new project
# 2. Get your Project ID from the Sanity dashboard
# 3. For API token, create one in Sanity dashboard under API > Tokens
#    (needs "Editor" permissions for content management)
VITE_SANITY_PROJECT_ID=your-project-id
VITE_SANITY_DATASET=production
VITE_SANITY_API_TOKEN=your-api-token

# CMS Selection
# - 'sanity': Use Sanity.io CMS
# - 'strapi': Use Strapi CMS
# - 'fallback': Use hardcoded sample data (default)
VITE_USE_CMS=fallback

# ===========================================
# STRAPI CMS CONFIGURATION (deprecated - use Sanity)
# ===========================================
# VITE_STRAPI_URL=https://your-strapi-instance.com
# VITE_STRAPI_TOKEN=your-jwt-token
# VITE_STRAPI_POST_CT=posts
# VITE_STRAPI_CATEGORY_CT=categories
# VITE_STRAPI_PUBLICATION_STATE=live

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MARKETING=true

# Debug Mode
VITE_DEBUG_MODE=false
